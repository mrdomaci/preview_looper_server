name: Deploy

on:
  push:
    branches:
      - master

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up SSH key
        uses: webfactory/ssh-agent@v0.5.2
        with:
          ssh-private-key: ${{ secrets.SSH_PRIVATE_KEY }}

      - name: Install dependencies
        run: composer install --no-progress --no-suggest --no-interaction

      - name: Laravel migration
        run: php artisan migrate --force

      - name: Clear cache
        run: php artisan cache:clear

      - name: Clear configuration cache
        run: php artisan config:cache

      - name: Update server
        run: ssh root@tle10.vas-server.cz "cd /www/hosting/slabihoud.cz/www && git pull && composer install --no-progress --no-suggest --no-interaction && php artisan migrate --force && php artisan cache:clear && php artisan config:cache"
